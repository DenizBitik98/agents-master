<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="ktj.logger.data_format">
            Klabs\KTJBundle\Log\RotatingDirectoryHandler::DIR_PER_YEAR_MONTH_DAY
        </parameter>
    </parameters>
    <services>
        <service id="ktj.log_handler.rotating_directory_handler" class="Klabs\KTJBundle\Log\RotatingDirectoryHandler">
            <argument>%kernel.logs_dir%/ktj.log</argument>
            <argument>debug</argument>
            <call method="setDateFormat">
                <argument>%ktj.logger.data_format%</argument>
            </call>
        </service>
    </services>
</container>
