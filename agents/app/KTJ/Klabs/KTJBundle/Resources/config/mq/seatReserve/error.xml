<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	<parameters>
		<parameter key="ktj.mq.error.cookie.login.seat_reserve">%seat_reserve_login%</parameter>
		<parameter key="ktj.mq.error.cookie.password.seat_reserve">%seat_reserve_password%</parameter>
		<parameter key="ktj.mq.error.cookie.machine_key.seat_reserve">%seat_reserve_machine_key%</parameter>
	</parameters>
	<services>
		<service id="klabs.mq.error.seat_reserve" class="Klabs\KTJBundle\KTJ\Provider\MQ\ErrorHandler\CollectionErrorHandler">
			<call method="setHandlers">
				<argument type="iterator">
					<argument type="service" id="klabs.mq.error.cookie.seat_reserve"/>
				</argument>
			</call>
		</service>
		<service id="klabs.mq.error.cookie.seat_reserve" class="Klabs\KTJBundle\KTJ\Provider\MQ\ErrorHandler\CookieErrorHandler">
			<call method="setProvider">
				<argument type="service" id="klabs_ktj.ktj_provider_mq.provider.seat_reserve"/>
			</call>
			<call method="setDefaultLogin">
				<argument>%ktj.mq.error.cookie.login.seat_reserve%</argument>
			</call>
			<call method="setDefaultPassword">
				<argument>%ktj.mq.error.cookie.password.seat_reserve%</argument>
			</call>
			<call method="setDefaultMachineKey">
				<argument>%ktj.mq.error.cookie.machine_key.seat_reserve%</argument>
			</call>
			<call method="setConfirmLogin">
				<argument>%ktj.mq.error.cookie.login.seat_reserve%</argument>
			</call>
			<call method="setConfirmPassword">
				<argument>%ktj.mq.error.cookie.password.seat_reserve%</argument>
			</call>
			<call method="setConfirmMachineKey">
				<argument>%ktj.mq.error.cookie.machine_key.seat_reserve%</argument>
			</call>
		</service>
	</services>
</container>
